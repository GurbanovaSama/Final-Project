@model ReviewViewItemDto

@{
    ViewData["Title"] = "Delete Review";
}

<h2>Are you sure you want to delete this review?</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.UserName</h5>
        <p class="card-text"><strong>Comment:</strong> @Model.Comment</p>
        <p class="card-text"><strong>Rating:</strong> @Model.Rating</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.UserName" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Review" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
