@model ICollection<ReviewListItemDto>

@{
    ViewData["Title"] = "Reviews";
}

<h2>Reviews</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Review</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Comment</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.UserName</td>
                <td>@review.Comment</td>
                <td>@review.Rating</td>
                <td>
                    <a asp-controller="Review" asp-action="Details" asp-route-id="@review.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-controller="Review" asp-action="Update" asp-route-id="@review.Id" class="btn btn-warning btn-sm">Update</a>
                    <form asp-action="Delete" asp-route-id="@review.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
