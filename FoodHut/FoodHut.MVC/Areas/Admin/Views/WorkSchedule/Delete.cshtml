@model WorkScheduleViewItemDto

<h2>Delete Work Schedule</h2>

<p>Are you sure you want to delete this work schedule?</p>
<p><strong>Day:</strong> @Model.Day</p>
<p><strong>Open Time:</strong> @Model.OpenTime</p>
<p><strong>Close Time:</strong> @Model.CloseTime</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
