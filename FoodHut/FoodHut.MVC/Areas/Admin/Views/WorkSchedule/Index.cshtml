@model ICollection<WorkScheduleListItemDto>


<h2>Work Schedules</h2>

<a asp-controller="WorkSchedule" asp-action="Create" class="btn btn-primary">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>Day</th>
            <th>Open Time</th>
            <th>Close Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Day</td>
                <td>@item.OpenTime</td>
                <td>@item.CloseTime</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
