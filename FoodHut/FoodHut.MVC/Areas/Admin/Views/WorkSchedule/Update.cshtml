@model WorkScheduleCreateDto

<h2>Create Work Schedule</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Day</label>
        <select asp-for="Day" asp-items="Html.GetEnumSelectList<DayOfWeek>()" class="form-control"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Open Time</label>
        <input asp-for="OpenTime" type="time" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Close Time</label>
        <input asp-for="CloseTime" type="time" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
