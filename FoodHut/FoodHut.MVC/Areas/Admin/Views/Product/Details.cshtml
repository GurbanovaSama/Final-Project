@model Product


<div class="container">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Product Details</h6>
        </div>
        <div class="card-body">
            <img style="width: 150px" src="~/uploads/products/@Model.ImageUrl" />
            <p>Id: @Model.Id</p>
            <p>Name: @Model.Name</p>
            <p>Description: @Model.Description</p>
            <p>Price: @Model.Price</p>
            <p>Restaurant Id: @Model.RestaurantId</p>
            <p>Category Id: @Model.CategoryId</p>
            <p>Create time: @Model.CreatedAt</p>
            @if (Model.UpdatedAt is not null)
            {
                <p>Update time: @Model.UpdatedAt</p>
            }
        </div>
    </div>
</div>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>

