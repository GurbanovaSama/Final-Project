@model ICollection<RestaurantListItemDto>;

@{
    ViewData["Title"] = "Restaurants";
}

<h2 class="mb-4">Restaurants</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add New Restaurant</a>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model)
        {
            <tr>
                <td>@restaurant.Name</td>
                <td>@restaurant.Location</td>
                <td>@restaurant.PhoneNumber</td>
                <td>@restaurant.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@restaurant.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Update" asp-route-id="@restaurant.Id" class="btn btn-warning btn-sm">Update</a>
                    <a asp-action="Delete" asp-route-id="@restaurant.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

