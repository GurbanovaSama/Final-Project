@model ICollection<RestaurantListItemDto>

@{
    ViewData["Title"] = "Restaurants List";
}

<h2 class="mb-4">Restaurants</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Restaurant</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model)
        {
            <tr>
                <td>@restaurant.Name</td>
                <td>@restaurant.Description</td>
                <td>@restaurant.Location</td>
                <td>@restaurant.PhoneNumber</td>
                <td>@restaurant.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@restaurant.Id" class="btn btn-info">Details</a>
                    <a asp-action="Update" asp-route-id="@restaurant.Id" class="btn btn-warning">Update</a>
                    <form asp-action="Delete" asp-route-id="@restaurant.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
