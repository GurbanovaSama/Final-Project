@model RestaurantUpdateDto

@{
    ViewData["Title"] = "Update Restaurant";
}

<h2 class="mb-4">Update Restaurant</h2>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Location</label>
        <input asp-for="Location" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Current Image</label><br />
        <img src="~/uploads/restaurants/@Model.ImageUrl" width="200" class="img-thumbnail" />
    </div>

    <div class="mb-3">
        <label class="form-label">Upload New Image</label>
        <input asp-for="Image" class="form-control" type="file" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
