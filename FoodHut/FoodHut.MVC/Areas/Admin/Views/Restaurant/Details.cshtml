@model RestaurantViewItemDto

@{
    ViewData["Title"] = "Restaurant Details";
}

<div style="text-align: center; max-width: 600px; margin: auto; border: 1px solid #ddd; padding: 20px; border-radius: 10px;">
    <h2 class="mb-4">@Model.Name</h2>

    <div>
        <strong>Description:</strong> @Model.Description
    </div>
    <div>
        <strong>Location:</strong> @Model.Location
    </div>
    <div>
        <strong>Phone Number:</strong> @Model.PhoneNumber
    </div>
    <div>
        <strong>Email:</strong> @Model.Email
    </div>
    <div>
        <strong>Image:</strong>
        <div>
            <img src="~/uploads/restaurants/@Model.ImageUrl" alt="Restaurant Image" style="max-width: 100%; border-radius: 5px;" />
        </div>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3" style="display: inline-block; margin-top: 15px;">Back to List</a>

</div>
