@model RestaurantViewItemDto

@{
    ViewData["Title"] = "Restaurant Details";
}

<h2 class="mb-4">@Model.Name</h2>

<div>
    <strong>Description:</strong> @Model.Description
</div>
<div>
    <strong>Location:</strong> @Model.Location
</div>
<div>
    <strong>Phone Number:</strong> @Model.PhoneNumber
</div>
<div>
    <strong>Email:</strong> @Model.Email
</div>
<div>
    <strong>Image:</strong>
    <img src="@Model.ImageUrl" alt="Restaurant Image" style="max-width: 300px;" />
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
