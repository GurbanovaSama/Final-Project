@model ReservationDto

@{
    ViewData["Title"] = "Make a Reservation";
}

<div style="max-width: 400px; margin: 50px auto; text-align: center;">
    <h2>Make a Reservation</h2>

    <form asp-action="Create" method="post" style="display: flex; flex-direction: column; gap: 15px;">
        <div>
            <label>Name</label>
            <input asp-for="Name" style="width: 100%; padding: 8px;" required />
        </div>

        <div>
            <label>Email</label>
            <input asp-for="Email" type="email" style="width: 100%; padding: 8px;" required />
        </div>

        <div>
            <label>Phone</label>
            <input asp-for="PhoneNumber" style="width: 100%; padding: 8px;" required />
        </div>

        <div>
            <label>Number of Guests</label>
            <input asp-for="NumberOfGuests" style="width: 100%; padding: 8px;" required />
        </div>

        <div>
            <label>Date</label>
            <input asp-for="Date" type="datetime-local" style="width: 100%; padding: 8px;" required />
        </div>

        <button type="submit" asp-controller="Reservation" asp-action="Success"
                style="background-color: #FF214F; color: white; padding: 10px; border: none;
                       border-radius: 5px; cursor: pointer; font-size: 16px; width: 100%;">
            Reserve
        </button>
    </form>
</div>
