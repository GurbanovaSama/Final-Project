@model ICollection<GetProductDto>

<h2>Products</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (GetProductDto product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="~/uploads/products/@product.ImageUrl" class="card-img-top" alt="@product.Name" width="300" height="300">
                    <div class="card-body" style="background-color: #808080; color: darkred;">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p><strong>Price:</strong> @product.Price</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No products found.</p>
}

