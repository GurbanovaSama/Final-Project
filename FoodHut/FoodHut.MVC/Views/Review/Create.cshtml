@model ReviewCreateDto

@{
    ViewData["Title"] = "Write a Review";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card p-4 shadow-lg bg-dark text-light" style="width: 40rem; border-radius: 10px;">
        <h2 class="text-center mb-4">Write a Review</h2>

        <form asp-action="Create" asp-controller="Review" method="post">
            <div class="mb-3">
                <label asp-for="Rating" class="form-label fw-bold">Rating (1-5):</label>
                <input asp-for="Rating" type="number" min="1" max="5" class="form-control" required>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label fw-bold">Your Review:</label>
                <textarea asp-for="Comment" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="RestaurantId" value="1">

            <div class="text-center">
                <button type="submit" class="btn btn-danger px-4 py-2"  >Submit</button>
            </div>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center mt-3">@TempData["SuccessMessage"]</div>
}

